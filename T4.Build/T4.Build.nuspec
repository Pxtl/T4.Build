  <metadata>
    <id>T4.Build</id>
    <version>$version$</version>
    <authors>Jonathan Giannuzzi</authors>
    <description>Tool to automatically transform T4 templates during build</description>
    <licenseExpression>Apache-2.0</licenseExpression>
  </metadata>
